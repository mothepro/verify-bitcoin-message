{
  "name": "verify-bitcoin-message",
  "description": "A dependency-free Bitcoin message signature verifier that works in browsers",
  "bin": {
    "verify-bitcoin-message": "./cli.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "bun": "^1.2.22"
  },
  "scripts": {
    "prebuild:browser": "bun run build:valid-payloads",
    "build:browser": "bun build ./verify.ts --outdir static",
    "build:valid-payloads": "bun run ./static/valid-payloads.ts > static/valid-payloads.html"
  },
  "main": "static/verify.js",
  "module": "verify.ts",
  "files": [
    "static"
  ],
  "type": "module",
  "license": "MIT",
  "version": "0.0.3"
}
