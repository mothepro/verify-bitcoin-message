{
  "name": "verify-bitcoin-message",
  "description": "A dependency-free Bitcoin message signature verifier that works in browsers",
  "bin": {
    "verify-bitcoin-message": "./cli.ts"
  },
  "devDependencies": {
    "@picocss/pico": "2.1.1",
    "@types/yargs": "17.0.33",
    "yargs": "18.0.0"
  },
  "peerDependencies": {
    "@types/bun": "^1.1.22"
  },
  "scripts": {
    "build:valid-payloads": "bun run ./static/valid-payloads.ts > static/valid-payloads.html",
    "build:copy-css": "cp -R node_modules/@picocss/pico/css static",
    "build:browser": "bun build static/index.ts --outdir static",
    "build:verify": "bun build ./verify.ts --outdir .",
    "build": "bun run build:verify && bun run build:browser",
    "prebuild:browser": "bun run build:valid-payloads && bun run build:copy-css",
    "prepublish": "bun test && bun run build:verify",
    "postinstall": "bun test:no-rpc && bun run build",
    "test:no-rpc": "bun test tests/verify-safe.test.ts"
  },
  "main": "verify.js",
  "module": "verify.js",
  "files": [
    "README.md",
    "package.json",
    "verify.js"
  ],
  "type": "module",
  "license": "MIT",
  "version": "0.0.4"
}
