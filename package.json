{
  "name": "verify-bitcoin-message",
  "description": "A dependency-free Bitcoin message signature verifier that works in browsers",
  "homepage": "https://verify-bitcoin-message.js.org",
  "bin": {
    "verify-bitcoin-message": "./cli.ts"
  },
  "devDependencies": {
    "@picocss/pico": "2.1.1",
    "@types/yargs": "17.0.33",
    "yargs": "18.0.0"
  },
  "peerDependencies": {
    "@types/bun": "^1.1.22"
  },
  "scripts": {
    "build:copy-css": "cp -R node_modules/@picocss/pico/css .",
    "build:js": "bun build verify.ts demo.ts --outdir .",
    "build:cli": "bun build cli.ts --target=node --outdir .",
    "build:exe": "bun build cli.ts --compile --outfile verify-bitcoin-message",
    "build": "bun run build:js && bun run build:cli && bun run build:exe",
    "prebuild:js": "bun run build:copy-css",
    "prepublish": "bun test && bun run build:js",
    "postinstall": "bun test verify && bun run build"
  },
  "main": "verify.js",
  "module": "verify.js",
  "files": [
    "README.md",
    "package.json",
    "verify.js"
  ],
  "type": "module",
  "license": "MIT",
  "version": "0.0.4"
}
