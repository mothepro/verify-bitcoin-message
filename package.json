{
  "name": "verify-bitcoin-message",
  "description": "A dependency-free Bitcoin message signature verifier that works in browsers",
  "bin": {
    "verify-bitcoin-message": "./cli.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "bun": "^1.2.22"
  },
  "scripts": {
    "build:valid-payloads": "bun run ./static/valid-payloads.ts > static/valid-payloads.html",
    "prebuild:browser": "bun run build:valid-payloads",
    "build:browser": "bun build static/index.ts --outdir static",
    "build:script": "bun build ./verify.ts --outdir .",
    "build": "bun run build:script && bun run build:browser"
  },
  "main": "verify.js",
  "module": "verify.js",
  "files": [
    "README.md",
    "package.json",
    "verify.js"
  ],
  "type": "module",
  "license": "MIT",
  "version": "0.0.4"
}
