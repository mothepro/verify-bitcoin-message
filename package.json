{
  "name": "verify-bitcoin-message",
  "module": "cli.ts",
  "bin": {
    "bitcoin-verify": "./cli.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build:browser": "bun run build:valid-payloads",
    "Pbuild:browser": "bun build ./index.ts --outdir static",
    "build:valid-payloads": "bun run ./static/valid-payloads.ts > static/valid-payloads.html",
    "cli": "bun cli.ts"
  },
  "description": "A dependency-free Bitcoin message signature verifier that works in browsers",
  "type": "module"
}
